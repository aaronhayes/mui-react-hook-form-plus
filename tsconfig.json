{
	"compilerOptions": {
		"jsx": "react",
		"module": "ESNext",
		"target": "ESNext",
		"declaration": true,
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"sourceMap": true,
		"allowJs": false,
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@lib/*": ["lib/*"],
			"@utils/*": ["utils/*"],
			"@stories/*": ["stories/*"],
			"@hooks/*": ["hooks/*"]
		},
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "example", "rollup/rollup.config.js", "storybook-static", "docs"]
}
